pkgname="dircacher-bin"
pkgver="0.2.1"
pkgrel="1"
pkgdesc="A basic recursive inode caching tool"
arch=("x86_64")
license=("GPL-3.0-or-later")
source=("dircacher")
sha512sums=("SKIP")

package() {
  mkdir -p "${pkgdir}/usr/bin"
  cp "${srcdir}/dircacher" "${pkgdir}/usr/bin/dircacher"
  chmod +x "${pkgdir}/usr/bin/dircacher"
}
